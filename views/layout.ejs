<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= title || (isAdmin ? 'Admin - 48 Roots' : 'Sahab Solutions') %></title>
    <meta name="description" content="<%= description ?? '' %>">

    <link rel="icon" type="image/png" href="/images/favicon.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/variables.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/nav.css">
    
    <% if (isAdmin) { %>
        <link rel="stylesheet" href="/css/admin/common.css">
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <% } %>

     <% if (typeof additionalCSS !== 'undefined') { %> <%
            additionalCSS.forEach(function(css) { %>
                <link rel="stylesheet" href="/css/<%= css %>" />
        <% }); %> <% } %>

    <% if (!isAdmin && typeof stripePublicKey !== 'undefined' &&
        stripePublicKey) { %>
        <script>
            window.STRIPE_CONFIG = { publicKey: "<%= stripePublicKey %>" }
        </script>
        <script src="https://js.stripe.com/v3/"></script>
    <% } %>
</head>

<body>

<% if (isAdmin) { %>

    <!-- ================= ADMIN LAYOUT ================= -->
    <div class="admin-layout">
        <aside class="admin-sidebar">
            <div class="admin-sidebar-header">
                <a href="/admin/dashboard" class="admin-logo">
                    <img src="/images/logo.png" class="admin-logo-img" alt="logo">
                    <span class="admin-logo-text">Admin</span>
                </a>
            </div>

            <nav class="admin-nav">
                <a href="/admin/dashboard" class="admin-nav-link"><i class="fas fa-tachometer-alt"></i><span>Dashboard</span></a>
                <a href="/admin/products" class="admin-nav-link"><i class="fas fa-box"></i><span>Products</span></a>
                <a href="/admin/orders" class="admin-nav-link"><i class="fas fa-shopping-bag"></i><span>Orders</span></a>
                <a href="/admin/promotions" class="admin-nav-link"><i class="fas fa-tags"></i><span>Promotions</span></a>
                <a href="/admin/analytics" class="admin-nav-link"><i class="fas fa-chart-line"></i><span>Analytics</span></a>
                <a href="/" class="admin-nav-link" target="_blank"><i class="fas fa-external-link-alt"></i><span>View Store</span></a>
            </nav>

            <div class="admin-sidebar-footer">
                <a href="/admin/logout" class="admin-nav-link"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </div>
        </aside>

        <main class="admin-main">
            <%- body %>
        </main>
    </div>

<% } else { %>
    <%- include('partials/nav') %>

    <main class="main-content">
        <%- body %>
    </main>

    <%- include('partials/footer') %>

<% } %>

<script src="/js/common.js"></script>

<% if (!isAdmin) { %>
    <script src="/js/nav.js"></script>
    <script src="/js/footer.js"></script>
<% } %>

<% if (typeof additionalJS !== 'undefined') { %> <%
    additionalJS.forEach(function(js) { %>
    <script src="/js/<%= js %>"></script>
<% }); %> <% } %>

<% if (typeof googleKey !== 'undefined' && googleKey) { %>
            <script 
            src="https://maps.googleapis.com/maps/api/js?key=<%= googleKey %>&libraries=places"
            async
            defer
            ></script>
<% } %>

</body>
</html>
