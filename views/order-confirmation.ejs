<section class="order-confirmation">
    <div class="container">
        <div class="confirmation-header">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1>Thank You for Your Order!</h1>
            <p class="order-number">Order #<span id="orderNumber"><%= orderNumber %></span></p>
        </div>

        <div class="confirmation-content">
            <div class="confirmation-message">
                <p>Your order has been received and is being processed.</p>
                <p>A confirmation email will be sent to your email address shortly.</p>
            </div>

            <div class="order-details" id="orderDetails">
                <!-- Order details loaded dynamically -->
                <div class="loading-state">
                    <span class="loading"></span>
                    <p>Loading order details...</p>
                </div>
            </div>

            <div class="order-status" id="orderStatus" style="display: none">
                <h3>Order Status</h3>
                <div class="status-timeline">
                    <div class="status-step" data-status="received">
                        <div class="status-dot"></div>
                        <span>Order Received</span>
                    </div>
                    <div class="status-step" data-status="processing">
                        <div class="status-dot"></div>
                        <span>Being Prepared</span>
                    </div>
                    <div class="status-step" data-status="shipped">
                        <div class="status-dot"></div>
                        <span>Shipped</span>
                    </div>
                    <div class="status-step" data-status="delivered">
                        <div class="status-dot"></div>
                        <span>Delivered</span>
                    </div>
                </div>
            </div>

            <div class="tracking-info" id="trackingInfo" style="display: none">
                <h3>Tracking Information</h3>
                <div class="tracking-details">
                    <p><strong>Carrier:</strong> <span id="trackingCarrier"></span></p>
                    <p><strong>Tracking Number:</strong> <span id="trackingNumber"></span></p>
                    <a href="#" id="trackingLink" class="btn btn-secondary" target="_blank">
                        Track Package <i class="fas fa-external-link-alt"></i>
                    </a>
                </div>
            </div>

            <div class="donation-confirmation">
                <div class="donation-icon">
                    <i class="fas fa-heart"></i>
                </div>
                <h3>Your Impact</h3>
                <p>
                    A donation of <strong>$<span id="donationAmount">5.00</span></strong> from your
                    purchase will go towards supporting Palestinian families and communities.
                </p>
                <p>Thank you for making a difference!</p>
            </div>

            <div class="next-steps">
                <h3>What's Next?</h3>
                <ul>
                    <li>You'll receive an email confirmation shortly</li>
                    <li>Your order will be printed and shipped within 2-5 business days</li>
                    <li>You'll receive tracking information once your order ships</li>
                </ul>
            </div>

            <div class="confirmation-actions">
                <a href="/shop" class="btn btn-primary">Continue Shopping</a>
                <button class="btn btn-outline" onclick="window.print()">
                    <i class="fas fa-print"></i> Print Receipt
                </button>
            </div>
        </div>
    </div>
</section>

