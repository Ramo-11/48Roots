<section class="cart-page">
    <div class="container">
        <h1>Shopping Cart</h1>

        <div class="cart-layout">
            <div class="cart-items" id="cartItems">
                <!-- Cart items loaded dynamically -->
            </div>

            <div class="cart-summary">
                <h3>Order Summary</h3>
                <div class="summary-row">
                    <span>Subtotal</span>
                    <span id="subtotal">$0.00</span>
                </div>
                <div class="summary-row">
                    <span>Donation to Palestine</span>
                    <span id="donation">$0.00</span>
                </div>
                <div class="summary-row">
                    <span>Shipping</span>
                    <span id="shipping">Calculated at checkout</span>
                </div>
                <div class="summary-row total">
                    <span>Total</span>
                    <span id="total">$0.00</span>
                </div>

                <button class="btn btn-primary btn-lg" id="checkoutBtn">Proceed to Checkout</button>
                <a href="/shop" class="btn btn-outline">Continue Shopping</a>
            </div>
        </div>
    </div>
</section>
